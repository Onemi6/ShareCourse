    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="sharecourse.myclass.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="sharecourse.activity.LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="sharecourse.activity.CommentActivity"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="sharecourse.activity.DetailsActivity"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="sharecourse.activity.TabHostActivity"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="sharecourse.activity.RegisterActivity"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="sharecourse.activity.PDIActivity"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="sharecourse.activity.TDIActivity"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="sharecourse.activity.PublishedActivity"
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="sharecourse.activity.ImageGridActivity"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="sharecourse.activity.PhotoActivity"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="sharecourse.activity.TestPicActivity"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="sharecourse.activity.AccountManageActivity"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="sharecourse.activity.ParentSystemSetupActivity"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="sharecourse.activity.TeacherSystemSetupActivity"
            android:launchMode="singleTask" >
